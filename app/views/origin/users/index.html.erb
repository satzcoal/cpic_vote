<h5 class="widget-name"><i class="fa fa-list"></i>用户列表</h5>
<div class="navbar">
  <div class="navbar-inner">
    <h6>用户列表</h6>
    <%= link_to '新建用户', new_origin_user_path, :class => 'btn btn-info pull-right' %>
  </div>
</div>
<table class="table table-striped table-bordered" id="filer-table">
  <thead>
  <tr>
    <th>用户名</th>
    <th>姓名</th>
    <th>角色</th>
    <th>创建时间</th>
  </tr>
  </thead>
  <tbody>
  <% @origin_users.each do |origin_user| %>
    <tr>
      <td><%= link_to origin_user.name, origin_user %></td>
      <td><%= link_to origin_user.pname, origin_user %></td>
      <td><%= origin_user.role.name %></td>
      <td><%= origin_user.created_at.localtime.strftime('%Y-%m-%d %H:%M:%S') %></td>
    </tr>
  <% end %>
  </tbody>
</table>
