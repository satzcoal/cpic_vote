<h5 class="widget-name"><i class="fa fa-edit"></i><%= @vote.name %></h5>
<div class="navbar">
  <div class="navbar-inner">
    <h6>入选列表</h6>
  </div>
</div>
<table class="table table-striped table-bordered table-condensed table-hover">
  <thead>
  <tr>
    <% @vote.titles.sort.each do |header| %>
      <th><%= header[1]['name'] %></th>
    <% end %>
    <th>得票数</th>
  </tr>
  </thead>
  <tbody>
  <% @vote.results.sort_by { |res| -res.index }[0..(@vote.bingo_num - 1)].each do |res| %>
    <tr>
      <% @vote.titles.sort.each do |header| %>
        <td><%= res.item.content[header[1]['data_col'].to_s] %></td>
      <% end %>
      <td><%= res.index %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<h5></h5>
<div class="navbar">
  <div class="navbar-inner">
    <h6>未入选列表</h6>
  </div>
</div>
<table class="table table-striped table-bordered table-condensed table-hover" id="filer-table">
  <thead>
  <tr>
    <% @vote.titles.sort.each do |header| %>
      <th><%= header[1]['name'] %></th>
    <% end %>
    <th>得票数</th>
  </tr>
  </thead>
  <tbody>
  <% @vote.results.sort_by { |res| -res.index }[@vote.bingo_num..-1].each do |res| %>
    <tr>
      <% @vote.titles.sort.each do |header| %>
        <td><%= res.item.content[header[1]['data_col'].to_s] %></td>
      <% end %>
      <td><%= res.index %></td>
    </tr>
  <% end %>
  </tbody>
</table>